<Window x:Class="InstallerUI.InstallerMainWindow"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
			 xmlns:vm="clr-namespace:InstallerUI"
             mc:Ignorable="d" 
             Height="501" Width="400">
    <Window.Resources>
        <Style TargetType="Button">
            <Setter Property="Margin" Value="5" />
        </Style>
        <Style TargetType="TextBlock" x:Key="H1">
            <Setter Property="FontSize" Value="22" />
            <Setter Property="Margin" Value="5,15,5,0" />
        </Style>
        <Style TargetType="ProgressBar">
            <Setter Property="Height" Value="20" />
            <Setter Property="Margin" Value="5" />
        </Style>
    </Window.Resources>
    <Grid Height="483" VerticalAlignment="Top">
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition Width="0*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" MinHeight="75" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <TextBlock Text="WiX Toolset Bootstrapper Sample" Style="{StaticResource H1}" Margin="5,15,0,0" />
        <Button Command="{Binding Path=InstallCommand, Mode=OneTime}" Grid.Row="1" Margin="5,5,0,5">Install Sample Applications</Button>
        <Button Command="{Binding Path=UninstallCommand, Mode=OneTime}" Grid.Row="2" Margin="5,5,0,5">Uninstall</Button>

        <ProgressBar Grid.Row="3" Value="{Binding Path=LocalProgress, Mode=OneWay}" Minimum="0" Maximum="100"
					 VerticalAlignment="Bottom" Margin="5,0,0,5" Height="20"/>
        <StackPanel Grid.Row="3" Orientation="Horizontal" Margin="0,75,0,0" Grid.RowSpan="2">
            <TextBlock Text="Current Package: " Margin="10,0,0,0" />
            <TextBlock Text="{Binding Path=CurrentPackage, Mode=OneWay}" />
        </StackPanel>
        <ProgressBar Grid.Row="5" Value="{Binding Path=GlobalProgress, Mode=OneWay}" Minimum="0" Maximum="100" Margin="5,5,0,5" />
        <Label Content="FirstInstaller" Grid.Row="6" Margin="5,2,74,0" Height="26" VerticalAlignment="Top"/>
        <RadioButton Command="{Binding Path=FirstInstallerCommand}" GroupName="FirstInstaller" CommandParameter="Skip" IsChecked="True" Grid.Row="6" Margin="95,0,0,37" Height="20" VerticalAlignment="Bottom">Skip</RadioButton>
        <RadioButton Command="{Binding Path=FirstInstallerCommand}" GroupName="FirstInstaller" CommandParameter="Keep" Grid.Row="6" Margin="165,0,0,37" Height="20" VerticalAlignment="Bottom" HorizontalAlignment="Left">Keep</RadioButton>
        <RadioButton Command="{Binding Path=FirstInstallerCommand}" GroupName="FirstInstaller" CommandParameter="Install" Grid.Row="6" Margin="225,0,0,35" Height="20" VerticalAlignment="Bottom" HorizontalAlignment="Left">Install</RadioButton>
        <RadioButton Command="{Binding Path=FirstInstallerCommand}" GroupName="FirstInstaller" CommandParameter="UnInstall" Grid.Row="6" Margin="295,0,0,35" Height="20" VerticalAlignment="Bottom" HorizontalAlignment="Left">UnInstall</RadioButton>
        <RadioButton Command="{Binding Path=FirstInstallerCommand}" GroupName="FirstInstaller" CommandParameter="Remove" Grid.Row="6" Margin="95,0,0,15" Height="17" VerticalAlignment="Bottom" HorizontalAlignment="Left">Remove</RadioButton>
        <RadioButton Command="{Binding Path=FirstInstallerCommand}" GroupName="FirstInstaller" CommandParameter="Update" Grid.Row="6" Margin="165,33,0,15" HorizontalAlignment="Left">Update</RadioButton>

        <Label Content="SecondInstaller" Grid.Row="7" Margin="5,2,74,0" Height="26" VerticalAlignment="Top"/>
        <RadioButton Command="{Binding Path=SecondInstallerCommand}" GroupName="SecondInstaller" CommandParameter="Skip" IsChecked="True" Grid.Row="7" Margin="95,0,0,37" Height="20" VerticalAlignment="Bottom">Skip</RadioButton>
        <RadioButton Command="{Binding Path=SecondInstallerCommand}" GroupName="SecondInstaller" CommandParameter="Keep" Grid.Row="7" Margin="165,0,0,37" Height="20" VerticalAlignment="Bottom" HorizontalAlignment="Left">Keep</RadioButton>
        <RadioButton Command="{Binding Path=SecondInstallerCommand}" GroupName="SecondInstaller" CommandParameter="Install" Grid.Row="7" Margin="225,0,0,35" Height="20" VerticalAlignment="Bottom" HorizontalAlignment="Left">Install</RadioButton>
        <RadioButton Command="{Binding Path=SecondInstallerCommand}" GroupName="SecondInstaller" CommandParameter="UnInstall" Grid.Row="7" Margin="295,0,0,35" Height="20" VerticalAlignment="Bottom" HorizontalAlignment="Left">UnInstall</RadioButton>
        <RadioButton Command="{Binding Path=SecondInstallerCommand}" GroupName="SecondInstaller" CommandParameter="Remove" Grid.Row="7" Margin="95,0,0,15" Height="17" VerticalAlignment="Bottom" HorizontalAlignment="Left">Remove</RadioButton>
        <RadioButton Command="{Binding Path=SecondInstallerCommand}" GroupName="SecondInstaller" CommandParameter="Update" Grid.Row="7" Margin="165,33,0,15" HorizontalAlignment="Left">Update</RadioButton>

        <Label Content="Mole Profiler" Grid.Row="8" Margin="5,2,74,0" Height="26" VerticalAlignment="Top"/>
        <RadioButton Command="{Binding Path=MoleculeProfilerCommand}" GroupName="MoleculeProfilerInstaller" CommandParameter="Skip" IsChecked="True" Grid.Row="8" Margin="95,0,0,37" Height="20" VerticalAlignment="Bottom">Skip</RadioButton>
        <RadioButton Command="{Binding Path=MoleculeProfilerCommand}" GroupName="MoleculeProfilerInstaller" CommandParameter="Keep" Grid.Row="8" Margin="165,0,0,37" Height="20" VerticalAlignment="Bottom" HorizontalAlignment="Left">Keep</RadioButton>
        <RadioButton Command="{Binding Path=MoleculeProfilerCommand}" GroupName="MoleculeProfilerInstaller" CommandParameter="Install" Grid.Row="8" Margin="225,0,0,35" Height="20" VerticalAlignment="Bottom" HorizontalAlignment="Left">Install</RadioButton>
        <RadioButton Command="{Binding Path=MoleculeProfilerCommand}" GroupName="MoleculeProfilerInstaller" CommandParameter="UnInstall" Grid.Row="8" Margin="295,0,0,35" Height="20" VerticalAlignment="Bottom" HorizontalAlignment="Left">UnInstall</RadioButton>
        <RadioButton Command="{Binding Path=MoleculeProfilerCommand}" GroupName="MoleculeProfilerInstaller" CommandParameter="Remove" Grid.Row="8" Margin="95,0,0,15" Height="17" VerticalAlignment="Bottom" HorizontalAlignment="Left">Remove</RadioButton>
        <RadioButton Command="{Binding Path=MoleculeProfilerCommand}" GroupName="MoleculeProfilerInstaller" CommandParameter="Update" Grid.Row="8" Margin="165,33,0,15" HorizontalAlignment="Left">Update</RadioButton>

    </Grid>
</Window>
